<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ac_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.cily.utils.app.widget.NoScrollViewPager
        android:id="@+id/noVp_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View android:layout_height="@dimen/y1"
        android:layout_width="match_parent"
        android:background="@color/color_bg_round_ed_search"/>

    <RadioGroup
        android:id="@+id/rg_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_common_title_height"
        android:padding="@dimen/x5"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbt_zixun_id"
            style="@style/style_main_tab_rbt"
            android:drawableTop="@drawable/select_main_tab_zixun"
            android:checked="true"
            android:text="资讯" />

        <RadioButton
            android:id="@+id/rbt_search_id"
            style="@style/style_main_tab_rbt"
            android:drawableTop="@drawable/select_main_tab_search"
            android:text="查询" />
        <RadioButton
            android:id="@+id/rbt_me_id"
            style="@style/style_main_tab_rbt"
            android:drawableTop="@drawable/select_main_tab_me"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>
