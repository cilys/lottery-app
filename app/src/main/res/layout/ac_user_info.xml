<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_frame_margin"
            android:paddingRight="@dimen/dp_frame_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_userName"
                style="@style/style_me_tv_no_drawableRight"
                android:text="用户账号："/>
            <View style="@style/style_splite_line_h" />

            <TextView
                android:id="@+id/tv_realName"
                style="@style/style_me_tv_no_drawableRight"
                android:text="真实姓名："/>
            <View style="@style/style_splite_line_h" />

            <TextView
                android:id="@+id/tv_sex"
                style="@style/style_me_tv"
                android:text="用户性别："/>
            <View style="@style/style_splite_line_h" />
            <TextView
                android:id="@+id/tv_phone"
                style="@style/style_me_tv"
                android:text="手机号码："/>
            <View style="@style/style_splite_line_h" />
            <TextView
                android:id="@+id/tv_idCard"
                style="@style/style_me_tv"
                android:text="身份证号："/>
            <View style="@style/style_splite_line_h" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/style_me_tv"
                android:text="家庭住址：" />
            <View style="@style/style_splite_line_h" />

            <TextView
                android:id="@+id/tv_leftMoney"
                style="@style/style_me_tv_no_drawableRight"
                android:text="账户余额：" />
            <View style="@style/style_splite_line_h" />

            <TextView
                android:id="@+id/tv_bankName"
                style="@style/style_me_tv"
                android:text="开户银行：" />
            <View style="@style/style_splite_line_h" />

            <TextView
                android:id="@+id/tv_bankCard"
                style="@style/style_me_tv"
                android:text="银行卡号：" />
            <View style="@style/style_splite_line_h" />

            <Button
                android:id="@+id/btn_commit"
                style="@style/style_common_btn"
                android:background="@color/color_main"
                android:text="更新" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>